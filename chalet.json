	"distribution": {
		"assimp": {
			"kind": "archive",
			"condition": "[:macos]",
			"format": "zip",
			"include": [
				"${externalBuild:assimp}/lib",
				"${external:assimp}/include"
			]
		}
		,

		"glfw": {
			"kind": "archive",
			"condition": "[:macos]",
			"format": "zip",
			"include": [
				"${externalBuild:glfw}/src/*.a",
				"${external:glfw}/include"
			]
		}
		,

		"freetype": {
			"kind": "archive",
			"condition": "[:macos]",
			"format": "zip",
			"include": [
				"${externalBuild:freetype}/*.a",
				"${external:freetype}/include"
			]
		}

		,
		"libpng": {
			"kind": "archive",
			"condition": "[:macos]",
			"format": "zip",
			"include": [
				"${external:libpng}/*.h",
				"${externalBuild:libpng}/*.a"
			]
		}
		
