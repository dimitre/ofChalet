			"recheck": false,
			"rebuild": false
		},

		"glfw": {
			"kind": "cmakeProject",
			"location": "${external:glfw}",
			"recheck": false,
			"rebuild": false,
			"defines" : [
				"GLFW_BUILD_DOCS=OFF",
				"GLFW_BUILD_TESTS=OFF",
				"GLFW_BUILD_EXAMPLES=OFF",
				"BUILD_SHARED_LIBS=OFF",
				"CMAKE_BUILD_TYPE=Release",
                "CMAKE_OSX_DEPLOYMENT_TARGET=10.9",
                "CMAKE_C_FLAGS=-arch arm64 -arch x86_64"
			]
		}
