				// -mfpu=neon -mfloat-abi=hard
				"OBSENSOR_USE_ORBBEC_SDK=NO",
				
				"CPU_BASELINE=NATIVE",
				"CMAKE_CXX_FLAGS=-fvisibility-inlines-hidden -stdlib=libc++ -std=c++11 -O3 -fPIC -Wno-implicit-function-declaration",
				"CMAKE_C_FLAGS=-fvisibility-inlines-hidden -stdlib=libc++ -O3 -fPIC -Wno-implicit-function-declaration",

